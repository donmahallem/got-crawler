{
    "name": "got-crawler",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "test": "mocha --config ./.mocharc.yml",
        "build": "tsc --sourceMap --outDir ./build/",
        "build:watch": "tsc --sourceMap --watch --outDir ./build/",
        "test-ci": "nyc npm run test",
        "start": "npm run build:live",
        "build:live": "nodemon --watch src/**/*.ts --exec ts-node src/index.ts",
        "build-crawler:live": "nodemon --watch src/**/*.ts --exec ts-node src/crawler.ts",
        "build:doc": "node ./node_modules/typedoc/bin/typedoc --out ./tt2/ --mode modules --exclude /**/index ./src/",
        "coverage:remap": "remap-istanbul -i ./coverage/coverage.json -o ./coverage/lcov.info --exclude node_modules --type lcovonly"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@types/nconf": "0.10.1",
        "@types/redis": "^2.8.31",
        "nconf": "^0.11.3",
        "redis": "^3.1.2"
    },
    "devDependencies": {
        "@types/chai": "4.2.21",
        "@types/mocha": "8.2.3",
        "chai": "4.3.4",
        "istanbul": "0.4.5",
        "karma": "6.3.4",
        "karma-chai": "0.1.0",
        "karma-mocha": "2.0.1",
        "karma-sinon": "1.0.5",
        "mocha": "9.0.2",
        "nodemon": "2.0.11",
        "nyc": "15.1.0",
        "ts-node": "10.0.0",
        "typedoc": "0.21.2",
        "typescript": "4.3.5"
    },
    "nyc": {
        "include": [
            "src/*.ts",
            "src/**/*.ts"
        ],
        "exclude": [
            "typings"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "lcov"
        ],
        "all": true
    }
}
